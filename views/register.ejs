<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Register For the Formula Analyzer</title>
    <% include partials/templates/header.ejs %>
    <% include partials/templates/stylesheets.ejs %>
  </head>
  <body id="<%= ID %>">
    <% include partials/templates/menu-not-signed-in.ejs %>
    <h1 class="centered"><%= title %></h1>
    <p class="centered">Enter the Information Below to Become A User</p>

    <div class="centered">
      <% if (messages) { %>
      <%  messages.forEach(function(item){ %>
          <div class="pure-u-1 pure-u-sm-1-2 pure-u-xl-1-4">
            <div class="message">
              <p><%= item.msg %></p>
            </div>
          </div>
      <%  }); %>
      <% } %>
      <% include partials/content/registration-form.ejs %>
    </div>

  </body>
</html>
