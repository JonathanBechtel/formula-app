<!DOCTYPE html>
<html>
  <head>
    <% include partials/templates/header.ejs %>
    <% include partials/templates/stylesheets.ejs %>
  </head>
  <body id="<%= ID %>">
    <% include partials/templates/menu-not-signed-in.ejs %>
      <h1 class="centered"><%= title %></h1>
      <p class="centered"><%= description %></p>
      <div class="content">
      <% if (token.length > 1) { %>

        <div class="pure-u-1">
        <% if (errors) { %>
          <%  errors.forEach(function(item){ %>
                <div class="message centered">
                  <p><%= item.msg %></p><br />
                </div>
          <%  }); %>
        <%  } %>
        </div>

            <% include partials/content/reset-password-form.ejs %>
        <% } else { %>
        <%  if (updated) { %>
            <p class="centered">It can be found <a href="/login">here.</a></p>
        <%  } else { %>
            <p class="centered">Try <a href="/forgot-password">requesting another reset token.</a></p>
            <%  } %>
        <% } %>
      </div>
  </body>
</html>
