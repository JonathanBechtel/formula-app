<div class="pure-g">
    <% formulas.forEach(function(item, key){ %>
      <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-4 pure-u-xl-1-5">
          <div class="formula-block centered" id=<%=item.f_id%>>
            <h4 class="padded-top"> <%= item.name %></h4>
            <p> <%= item.description %></p>
                <a class="button-success pure-button" href="/users/<%=user.username.substring(0, user.username.indexOf('@'))%>/formula/<%= item.f_id %>">Show</a>
                <button class="button-warning pure-button">Delete</button>
        </div>
      </div>
      <% }); %>
</div>
